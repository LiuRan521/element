/* pages/store/store.wxss */
.store{
  width: 100%;
  height: 100%;
  background: #f3f5f7;
}
.goodIncludes {
    width: 100%;
    height: 302rpx;
    margin-bottom: 30rpx;
    background: white;
    display: flex;
    flex-direction: column;
    
}
.goodIncludes-top{
  display: flex;
    justify-content: space-between;
    padding: 10px 20rpx;
    box-sizing: border-box;
}
.goodIncludes-top view:nth-of-type(1)>view:nth-of-type(2){
display: flex;
padding-top: 20rpx;
    box-sizing: border-box;

}
.goodIncludes-top view:nth-of-type(1)>view:nth-of-type(2)>cover-image{
  width: 36rpx;
  height: 30rpx;
}
.goodIncludes-top view:nth-of-type(1)>view:nth-of-type(2)>text:nth-of-type(1){
  font-size: 20rpx;
  padding-left: 10px;
  box-sizing: border-box;

}
.goodIncludes-top view:nth-of-type(1)>view:nth-of-type(2)>text:nth-of-type(2){
  font-size: 20rpx;
    padding-left: 10px;
    line-height: 36rpx;
    box-sizing: border-box;

}
.goodIncludes-top>view:nth-of-type(2){
  display: flex;
  flex-direction: column;
  align-items: center;
}
.goodIncludes-top>view:nth-of-type(2)>text:nth-of-type(1){
  color: red;
}
.goodIncludes-top>view:nth-of-type(2)>text:nth-of-type(2){
  font-size: 24rpx;
}
.goodIncludes-bottom{
  width: 100%;
  height: 146rpx;
  border-top: 1rpx solid #f3f5f7;
display: flex;
justify-content: space-between;
}
.goodIncludes-bottom>view{
  width: 33%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  padding: 10px 0px;
  box-sizing: border-box;
}
.goodIncludes-bottom>view>view:nth-of-type(1){
font-size: 26rpx;
color: rgb(147, 153, 159)
}
.goodIncludes-bottom>view>view:nth-of-type(2)>text:nth-of-type(1){
font-size: 40rpx;
}
.goodIncludes-bottom>view>view:nth-of-type(2)>text:nth-of-type(2){
font-size: 26rpx;
}
.goodIncludes-bottom>view:nth-of-type(2){
  border-left: 1px solid #f3f5f7;
  border-right: 1px solid #f3f5f7;
}
.notice{
  width: 100%;
  height: 700rpx;
  display: flex;flex-direction: column;
  background: white;
   margin-bottom: 30rpx;
}
.notice>view:nth-of-type(1){
  width: 100%;
  height: 60rpx;
  padding: 20rpx 30rpx ;
  box-sizing: border-box;
  font-weight: bold;
}
.notice>view:nth-of-type(2){
  width: 100%;
  padding: 20rpx 50rpx 0rpx 30rpx;
  box-sizing: border-box;
  color: red;
  font-size: 30rpx;
}
.notice>view:nth-of-type(3){
  display: flex;
  align-items: center;
  padding: 30rpx
}
.notice>view:nth-of-type(3)>view{
  height: 80rpx;
}
.notice>view:nth-of-type(3)>view:nth-of-type(1){
  width: 10%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.notice>view:nth-of-type(3)>view:nth-of-type(1)>view{
   /* line-height: 90rpx; */
   margin: 20rpx;
}
.notice>view:nth-of-type(3)>view:nth-of-type(1) cover-image{
  width: 45rpx;
  height: 45rpx;
  vertical-align: middle;
}
.notice>view:nth-of-type(3)>view:nth-of-type(2) text{
  font-size: 28rpx;
  line-height: 85rpx;
}
.imgSwiper{
  width: 100%;
  height:300rpx;
  background: white;
  margin-bottom: 20rpx;
}
.imgSwiper>view:nth-of-type(1){
  width: 100%;
  height: 60rpx;
  padding: 20rpx 30rpx ;
  box-sizing: border-box;
  font-weight: bold;
}
.imgSwiper>view:nth-of-type(2){
  overflow-x: auto;
  width: 100%;
  height: 240rpx;
  white-space: nowrap;
  /* display: flex; */
}
.imgSwiper>view:nth-of-type(2)>view{
  width: 240rpx;
  height: 200rpx;
  margin-left:30rpx;
  margin-top: 20rpx;
  display: inline-block;
}
.imgSwiper>view:nth-of-type(2) cover-image{
  width: 100%;
  height: 100%;
}
.goodsMessage{
  width: 100%;
  height:430rpx;
  background: white;
  margin-bottom: 20rpx;
}
.goodsMessage>view:nth-of-type(1){
  width: 100%;
  height: 60rpx;
  padding: 20rpx 30rpx ;
  box-sizing: border-box;
  font-weight: bold;
}
.goodsMessage>view:nth-of-type(2){
  display: flex;
  flex-direction: column;
  align-items: center;
}
.goodsMessage>view:nth-of-type(2) >view{
width: 90%;
padding: 20rpx 0rpx;
border-bottom: 1rpx solid #f3f5f7;
font-size: 32rpx;
}
