/**index.wxss**/
page{
  width: 100%;
  height: 100%;
}
.container {
 width: 100%;
 height: 100%;
 display: flex;
 flex-direction: column;
 justify-content: space-between;
}
.header{
  width: 100%;
}
.header>view:nth-of-type(1){
  width: 100%;
  display: flex;
  background: rgba(0,0,0,0.4);
  box-sizing: border-box;
  padding: 40rpx 0 20rpx 40rpx;
}
.header>view:nth-of-type(1)>view:nth-of-type(1) image{
    width: 130rpx;
    height: 130rpx;
    border-radius:10rpx;
    margin-right: 32rpx;
}
.header>view:nth-of-type(1)>view:nth-of-type(2){
  width: 100%;
}
.header>view:nth-of-type(1)>view:nth-of-type(2)>view:nth-of-type(1) text:nth-of-type(1){
  color: white;
  background: #F01414;
  font-weight: bold;
  padding:7rpx 10rpx;
  font-size: 25rpx;
  border-radius: 5rpx;
  margin-right: 12rpx;
} 
.header>view:nth-of-type(1)>view:nth-of-type(2)>view:nth-of-type(1) text:nth-of-type(2){
  width: 100%;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}
.header>view:nth-of-type(1)>view:nth-of-type(2)>view:nth-of-type(2) {
    color: white;
    font-size: 24rpx;
    margin-top: 12rpx;
    margin-bottom: 15rpx;
}
.header>view:nth-of-type(1)>view:nth-of-type(2)>view:nth-of-type(3){
   width: 100%;
  position: relative;
 
}
.header>view:nth-of-type(1)>view:nth-of-type(2)>view:nth-of-type(3) image{
  width: 25rpx;
  height: 25rpx;
  position: absolute;
  top: 5rpx;
}
.header>view:nth-of-type(1)>view:nth-of-type(2)>view:nth-of-type(3) text:nth-of-type(1){
  font-size: 20rpx;
  color: white;
  position: absolute;
  left:30rpx;
}
.header>view:nth-of-type(1)>view:nth-of-type(2)>view:nth-of-type(3) text:nth-of-type(2){
  background: #4D5055;
  color: white;
  font-size: 20rpx;
  position: absolute;
  top: -10rpx;
  right:20rpx;
  padding: 10rpx 15rpx;
  border-radius: 25rpx;
}
#content{
  width: 100%;
  height: 100%;
  flex: 1;
  overflow: auto;
}
#footer{
  width: 100%;
  height: 100rpx;
}
.news{
  width: 100%;
  display: flex;
  justify-content: space-between;
 box-sizing: border-box;
  padding: 15rpx 20rpx 15rpx 20rpx;
  background: rgba(0,0,0, 0.600);
}
.news text:nth-of-type(1){
  color: rgba(0,0,0,0.8);
  background: white;
  /* width: 100rpx !important; */
  height: 38rpx;
  text-align: center;
  font-weight: bold;
  border-radius: 5rpx;
  font-size: 25rpx;
  padding: 0 5rpx;
}
.news text:nth-of-type(2){
  font-size: 20rpx;
  color: white;
}
.news text:nth-of-type(3){
  font-size: 20rpx;
  color: white;
  margin-right: 5rpx;
}
.menu_box{
  width: 100%;
  line-height: 80rpx;
  border-bottom: 1px solid rgb(7,17,27,0.1);
}
.menu_box text{
  display: inline-block;
  width: 33.3%;
  text-align: center;
  font-size: 28rpx;
}
.menu_box text:hover{
  color: red;
}